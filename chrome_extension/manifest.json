{
  "name": "Polygraph",
  "version": "0.0.1",
  "description": "Check false statements",
  "permissions": ["tabs","activeTab","declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
        "matches": ["https://*/*"],
        "css": ["notes.css"],
        "js": ["notes.js", "inject.js"]
    }],
  "manifest_version": 2
}